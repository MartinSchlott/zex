{
  "name": "@ai-inquisitor/zex",
  "version": "0.2.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build",
    "test": "NODE_OPTIONS=\"--loader ts-node/esm\" node tests/run-all-tests.ts",
    "typecheck": "tsc -p tsconfig.typecheck.json",
    "typecheck:fail": "tsc -p tests/typecheck/tsconfig.fail.json || echo 'expected type errors'",
    "test:basic": "NODE_OPTIONS=\"--loader ts-node/esm\" node src/tests/basic-functionality.test.ts",
    "test:llm": "NODE_OPTIONS=\"--loader ts-node/esm\" node src/tests/llm-schema.test.ts",
    "test:node": "NODE_OPTIONS=\"--loader ts-node/esm\" node src/tests/node-structure.test.ts",
    "test:type": "NODE_OPTIONS=\"--loader ts-node/esm\" node src/tests/mytest.ts",
    "start": "node --enable-source-maps dist/index.js",
    "dev": "NODE_OPTIONS=\"--loader ts-node/esm\" node src/index.ts",
    "publish": "npm publish --access public",
    "release": "npm publish --access public",
    "yalc": "npm run build && yalc publish --no-scripts",
    "yalc:push": "npm run build && yalc push --no-scripts"
  },
  "keywords": [
    "schema",
    "validation",
    "typescript",
    "zod",
    "alternative"
  ],
  "author": "Martin Schlott",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "your-repo-url"
  },
  "sideEffects": false,
  "devDependencies": {
    "@types/node": "^24.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
